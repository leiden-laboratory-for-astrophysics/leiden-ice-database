block content
  .contact
      h3 Contact the Leiden Ice Database
      form(action="{{ url_for('get_contact') }}" method='post')
        div
          // name forms
          p
          {% for category, message in get_flashed_messages(with_categories=True) %}
          <div class="alert-{{category}}"> {{ message }}</div>
          {% endfor %}
          p
          p
            | {{ form.name.label }} 
            br
            |   {{ form.name(placeholder='Your name') }}
          // email forms
          p
            | {{ form.email.label }} 
            br
            |   {{ form.email(placeholder='Your e-mail ...') }}
          // Subject of your request
          p
            | {{ form.institution.label }}
            br
            |   {{form.institution(placeholder='Your institution ...')}}
          // Content of your request
          p
            | {{ form.message.label }}
            br
            |   {{ form.message(placeholder='Write your request ...') }}
          // Submit button
          p
            input.btn.btn-success(type='submit', value='Send message')
      
  .row.footer.col-md-12
    .col-md-6
      p(style='text-align:left;')
        <img src="static/LfA_logo_Will_black.jpeg" style="width: 10vw; min-width: 300px; "> 
    .col-md-6.contact
      p(style='text-align:right;')
        <img src="static/leiden_logo_white.png" style="width: 8vw; min-width: 260px; "> 
